#!/bin/sh

capacity=$(cat /sys/class/power_supply/BAT0/capacity)

if [ $capacity -le 15 ]; then
        icon="ï–‚"
elif [ $capacity -gt 15 -a $capacity -le 40 ]; then
        icon="ï•»"
elif [ $capacity -gt 40 -a $capacity -le 60 ]; then
        icon="ï•½"
else
        icon="ï–€"
fi

status=$(sed "s/[Dd]ischarging/$icon/;s/[Nn]ot charging/ðŸ›‘/;s/[Cc]harging/ïƒ§/;s/[Uu]nknown/?/;s/[Ff]ull/ï•¸/" /sys/class/power_supply/BAT0/status)

printf %s%s%s%% "$status " "$capacity" "% "
