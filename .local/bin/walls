#!/bin/bash
#
# Script to change my wallpapers

path=${path:-~/docx/pictures/wallpapers}
interval=${interval:-120}

source parsevars

OIFS="$IFS"
IFS=$'\n'

while :
do
    for image in `find "$path" -maxdepth 1 -type f \( -name "*.png" -or -name "*.jpg" -or -name "*.jpeg" \) | shuf`
    do
        xwallpaper --zoom "$image"
        sleep $interval
    done
done
