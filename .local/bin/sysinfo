#!/bin/sh
#
# System info

wm="$(wmctrl -m | grep Name: | cut -d ' ' -f2)"
kernel="$(uname -r | cut -d - -f 1)"
distro="$(cat /etc/*-release | grep PRETTY_NAME | cut -d '=' -f2 | tr -d '"')"
packages="$(pacman -Qq | wc -l)"

IFS=. read -r s _ < /proc/uptime

d=$((s / 60 / 60 / 24))
h=$((s / 60 / 60 % 24))
m=$((s / 60 % 60))

# Only append days, hours and minutes if they're non-zero.
[ "$d" = 0 ] || uptime="${uptime}${d}d "
[ "$h" = 0 ] || uptime="${uptime}${h}h "
[ "$m" = 0 ] || uptime="${uptime}${m}m "

printf " \e[0m\n"
printf " \e[1;33m       $(whoami)\e[1;32m@\e[1;33m$(hostname)\n\n"
printf " \e[1;34m          OS \e[0m$distro\n"
printf " \e[1;34m      KERNEL \e[0m$kernel\n"
printf " \e[1;34m      UPTIME \e[0m${uptime:-0m}\n"
printf " \e[1;34m    PACKAGES \e[0m$packages\n"
printf " \e[1;34m          WM \e[0m$wm\n"
printf " \e[0m\n"
