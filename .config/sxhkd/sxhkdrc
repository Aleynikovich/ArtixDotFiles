# terminal
super + Return
    $TERMINAL

super + f
    $TERMINAL -e $FILE

super + grave
    $TERMINAL -e bluetoothctl

# browser
super + b
    $BROWSER

super + ctrl + b
    $BROWSER --incognito

# dmenu
super + shift + x
    sysact

super + slash
    dmenu_run -l 10 -g 8

# screenlock
super + x
    slock

# screenshot
Print
    screenshot

# start/kill compositor
super + c
    compositor

# notifications
ctrl + space
    dunstctl close-all

ctrl + grave
    dunstctl history-pop

# controls (brightness)
XF86MonBrightnessUp
    xbacklight -inc 5 && pkill -RTMIN+11 dwmblocks

XF86MonBrightnessDown
    xbacklight -dec 5 && pkill -RTMIN+11 dwmblocks

#controls (audio)
XF86AudioMute
    pactl set-sink-mute 0 toggle && pkill -RTMIN+10 dwmblocks

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume 0 {+,-}5% && pkill -RTMIN+10 dwmblocks

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send "sxhkd" "Configuration Reloaded!"
