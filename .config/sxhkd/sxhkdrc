# terminal
super + Return
    $TERMINAL

super + f
    $TERMINAL -e $FILE

super + grave
    $TERMINAL -e neomutt

# browser
super + b
    $BROWSER

super + ctrl + b
    $BROWSER --incognito

# dmenu
super + shift + x
    prompt 'Do you really want to shutdown?' 'poweroff'

super + slash
    dmenu_run -l 10 -g 8

# screenshot
Print
    screenshot

# controls (brightness)
XF86MonBrightnessUp
    xbacklight -inc 5 && pkill -RTMIN+11 dwmblocks

XF86MonBrightnessDown
    xbacklight -dec 5 && pkill -RTMIN+11 dwmblocks

#controls (audio)
XF86AudioMute
    pactl set-sink-mute 0 toggle && pkill -RTMIN+10 dwmblocks

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume 0 {+,-}5% && pkill -RTMIN+10 dwmblocks
