#!/bin/sh
#
# file runs with startx

xrdb -merge "$XDG_CONFIG_HOME/x11/xresources" &     # merging xresources

# starting some basic programs
numlockx &                                          # enable numlock at startup
dunst &                                             # notifications
unclutter &                                         # removing mouse cursor when stationary
sxhkd &                                             # hotkey daemon
dwmblocks &                                         # statusbar blocks
picom -GCb &                                        # compositor

xwallpaper --zoom $(tail ~/.local/share/bg -n 1) &  # setting background

exec dwm                                            # window manager
