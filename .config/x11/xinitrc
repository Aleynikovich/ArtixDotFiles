#!/bin/sh

# xinput --set-prop "SynPS/2 Synaptics TouchPad" \
#     "Synaptics Palm Detection" 1 &                      # palm detection

xrdb -merge "$XDG_CONFIG_HOME/x11/xresources" &         # merging xresources

numlockx &                                              # enable numlock at startup
dunst &                                                 # notifications
unclutter &                                             # disable cursor
sxhkd &                                                 # hotkey daemon
dwmblocks &                                             # statusbar
picom --experimental-backends &                         # compositor
batsignal -w 30 -c 20 -d 15 &                           # battery notifications
setbg &                                                 # setting background

exec dwm
